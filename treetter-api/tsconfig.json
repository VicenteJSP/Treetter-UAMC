{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {  "*": [ "node_modules/*", "src/types/*" ] }
  },
  "include": [ "src/**/*" ]
}